{
  "name": "devdo-api",
  "version": "1.2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionut-t/devDo-api.git"
  },
  "description": "devDo API",
  "scripts": {
    "start": "npm run watch-node",
    "serve": "node dist/server.js",
    "serve:prod": "NODE_ENV=production node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "pretty": "prettier --write \"./**/*.{ts,json}\"",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "empty-db": "ts-node emptyDb.ts --all"
  },
  "author": "Ionut Traistaru",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "helmet": "^3.21.2",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.0",
    "pug": "^3.0.1",
    "slugify": "^1.4.0",
    "validator": "^11.1.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.0.1",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/html-to-text": "^1.4.31",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mongodb": "^3.3.11",
    "@types/mongoose": "^5.5.32",
    "@types/mongoose-unique-validator": "^1.0.3",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.14",
    "@types/nodemailer": "^6.2.2",
    "@types/pug": "^2.0.4",
    "@types/shelljs": "^0.8.6",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "eslint": "^5.16.0",
    "nodemon": "^2.0.0",
    "prettier": "^1.19.1",
    "shelljs": "^0.8.3",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.2"
  },
  "engines": {
    "node": ">=12.3.1"
  }
}
